<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <size
                android:width="18dp"
                android:height="18dp">
            </size>
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/black"
                android:endColor="@color/black_10"
                android:gradientRadius="18">
            </gradient>
        </shape>
    </item>

    <item android:bottom="3dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <size
                android:width="18dp"
                android:height="18dp">
            </size>
            <solid
                android:color="@color/white">
            </solid>

        </shape>
    </item>

</layer-list>
