<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minardwu.yiyue.activity.FeedbackActivity">

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="有什么建议给我..."
        android:textColorHint="@color/black_20"
        android:textCursorDrawable="@null"
        android:gravity="top"
        android:minLines="30"
        android:maxLines="30"
        android:scrollbars="none"
        android:background="@drawable/et_post_feedback"/>

    <TextView
        android:id="@+id/tv_thanks"
        android:layout_centerInParent="true"
        android:text="您的反馈提交成功,感谢您的宝贵意见！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
