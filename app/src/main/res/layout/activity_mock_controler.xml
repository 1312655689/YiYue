<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minardwu.yiyue.activity.MockControllerActivity">

    <Switch
        android:id="@+id/sw_mock_data"
        android:text="使用Mock数据"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/sw_mock_search_data"
        android:text="使用Mock搜索数据"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sw_mock_data"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/sw_mock_artist_data"
        android:text="使用Mock歌手数据"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sw_mock_search_data"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/sw_mock_album_data"
        android:text="使用Mock专辑数据"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sw_mock_artist_data"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
