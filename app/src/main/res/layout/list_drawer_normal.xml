<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg_pressed_mask"
    android:id="@+id/rl_item"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:minHeight="42dp">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_list_drawer_normal"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <TextView
        android:textSize="15sp"
        android:textColor="@color/drawer_title_text_color"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_list_drawer_normal"
        android:id="@+id/tv_list_drawer_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="13sp"
        android:textColor="@color/drawer_info_text_color"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_list_drawer_normal_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</RelativeLayout>